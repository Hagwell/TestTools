@model IEnumerable<TestTools.Models.Patient>

<div class="card w-100 my-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0 text-center"><i class="fas fa-users"></i> Patient Table</h5>
    </div>
    <div class="card-body">
        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info mb-0">No patients generated yet.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover" id="patientTable">
                    <thead class="table-header">
                        <tr>
                            <th>NHS Number</th>
                            <th>Title</th>
                            <th>Surname</th>
                            <th>Forename</th>
                            <th>DOB</th>
                            <th>Address</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var patient in Model)
                        {
                            <tr>
                                <td><span class="badge bg-primary">@patient.GetNhsNumber</span></td>
                                <td>@patient.GetTitle</td>
                                <td><strong>@patient.GetSurname</strong></td>
                                <td>@patient.GetName</td>
                                <td>@patient.GetDob</td>
                                <td><small>@patient.GetAddress</small></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <small class="text-muted">
        <i class="fas fa-info-circle"></i> 
        Generated @(Model != null ? Model.Count() : 0) patient(s) successfully
    </small>
</div>
