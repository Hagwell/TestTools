<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <meta name="theme-color" content="#0066cc" />
    <title>@ViewData["Title"] - TestTools</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TestTools.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
    <style>
        /* Mobile-first responsive styles */
        .logo-responsive {
            height: 45px;
        }
        
        @@media (min-width: 768px) {
            .logo-responsive {
                height: 60px;
            }
        }
        
        /* Enhanced header styling */
        .dhcw-gradient-header {
            min-height: 50px;
        }
        
        @@media (min-width: 768px) {
            .dhcw-gradient-header {
                min-height: 65px;
            }
        }
        
        .navbar-brand {
            font-size: 1.3rem !important;
        }
        
        @@media (min-width: 768px) {
            .navbar-brand {
                font-size: 1.6rem !important;
            }
        }
        
        /* Improved navigation with gradient theme */
        .navbar-nav .nav-link {
            padding: 0.75rem 1rem;
            border-radius: 0.375rem;
            transition: all 0.3s ease;
            color: #495057;
            border: 1px solid transparent;
        }
        
        .navbar-nav .nav-link:hover {
            background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
            color: #1565c0;
            border-color: #90caf9;
            transform: translateY(-1px);
        }
        
        .navbar-nav .nav-link.active {
            background: linear-gradient(90deg, #2678c4 0%, #143a61 100%);
            color: white !important;
            font-weight: 600;
            border-color: #1976d2;
            box-shadow: 0 2px 4px rgba(25, 118, 210, 0.3);
        }
        
        /* Ensure active nav link text and icons are white */
        .navbar-nav .nav-link.active,
        .navbar-nav .nav-link.active:hover,
        .navbar-nav .nav-link.active:focus {
            color: white !important;
        }
        
        .navbar-nav .nav-link.active i {
            color: white !important;
        }
        
        /* Reduce tab section heights by 50% */
        .nav-tabs {
            padding: 0.25rem 0;
        }
        
        .nav-tabs .nav-link {
            padding: 0.375rem 0.75rem;
            margin-bottom: -1px;
            font-size: 0.9rem;
        }
        
        .tab-content {
            padding-top: 0.75rem;
        }
        
        .tab-pane {
            min-height: auto;
        }
        
        /* Compact card headers in tab content */
        .tab-pane .card-header {
            padding: 0.5rem 1rem;
        }
        
        .tab-pane .card-header h4,
        .tab-pane .card-header h5 {
            font-size: 1rem;
            margin-bottom: 0;
        }
        
        /* Reduce spacing in tab content */
        .tab-pane .card-body {
            padding: 0.75rem 1rem;
        }
        
        /* Better mobile spacing */
        @@media (max-width: 767px) {
            .container-fluid {
                padding-left: 1rem;
                padding-right: 1rem;
            }
            
            .navbar-brand {
                font-size: 1rem;
            }
        }
        
        /* Sticky header */
        .sticky-top {
            z-index: 1020;
        }
        
        /* Flexbox layout for full height */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        
        main {
            flex: 1;
        }
    </style>
</head>
<body>
    <header class="sticky-top">
        <div class="dhcw-gradient-header py-2 py-md-3">
            <div class="container-fluid">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="navbar-brand text-white fw-bold mb-0 fs-6 fs-md-5">DHCW Test Tools</span>
                    <img src="~/DHCW-logo-white.svg" alt="DHCW Logo" class="logo-responsive" />
                </div>
            </div>
        </div>
        
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavigation" aria-controls="mainNavigation" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="mainNavigation">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 w-100 justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>
                                <span>Home</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "ServiceChecker" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="ServiceChecker">
                                <i class="fas fa-check-circle me-1"></i>
                                <span class="d-none d-md-inline">Service Status Tool</span>
                                <span class="d-md-none">Services</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "PatientGenerator" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="PatientGenerator">
                                <i class="fas fa-user-plus me-1"></i>
                                <span class="d-none d-md-inline">Patient Generator Tool</span>
                                <span class="d-md-none">Patients</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "XmlCompare" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="XmlCompare">
                                <i class="fas fa-code-compare me-1"></i>
                                <span class="d-none d-md-inline">XML Diff Tool</span>
                                <span class="d-md-none">XML</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "FileConverter" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="FileConverter">
                                <i class="fas fa-file-export me-1"></i>
                                <span class="d-none d-md-inline">File Conversion Tool</span>
                                <span class="d-md-none">Convert</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "WebScraper" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="WebScraper">
                                <i class="fas fa-spider me-1"></i>
                                <span class="d-none d-md-inline">Web Scrape Tool</span>
                                <span class="d-md-none">Scraper</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <main>
        <div class="container-fluid px-3 px-md-4 py-3">
            @RenderBody()
        </div>
    </main>

    <footer class="bg-light border-top mt-auto py-3">
        <div class="container-fluid px-3 px-md-4">
            <div class="row align-items-center text-muted">
                <div class="col-md-6 text-center text-md-start">
                    <small>&copy; 2025 DHCW Test Tools</small>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <small><a href="@Url.Action("Privacy", "Home")" class="text-decoration-none">Privacy</a></small>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
